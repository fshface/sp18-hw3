<%= form_tag students_path do %>
  <%= label_tag(:nickname, "Nickname") %>
  <%= text_field_tag(:nickname, 'Nerd', placeholder: @nerd) %>

  <%= label_tag(:pet, "Favorite Pet") %>
  <%= text_field_tag(:pet, 'Dog') %>

  <%= label_tag(:school, "School") %>
  <%= text_field_tag(:school, 'Stanford') %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student!") %>
<% end %>